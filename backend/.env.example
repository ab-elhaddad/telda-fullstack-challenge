# Server Configuration
NODE_ENV=development
PORT=5000
API_PREFIX=/api

# Database Configuration (Neon Postgres)
DATABASE_URL=postgres://user:password@hostname:port/dbname?sslmode=require

# JWT Configuration
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRES_IN=1d
JWT_REFRESH_SECRET=your_jwt_refresh_secret_key_here
JWT_REFRESH_EXPIRES_IN=7d

# Password Hashing
BCRYPT_SALT_ROUNDS=10

# Logging
LOG_LEVEL=info
LOG_FORMAT=dev

# Security
RATE_LIMIT_WINDOW_MS=15*60*1000

# TMDB API Configuration
TMDB_API_KEY=your_tmdb_api_key_here
RATE_LIMIT_MAX=100

# CORS
CORS_ORIGIN=http://localhost:3000

# Cloud Storage (for file uploads)
# CLOUD_STORAGE_PROVIDER=aws|cloudinary (leave empty to use mock implementation)
# CLOUD_STORAGE_BASE_URL=https://your-cloud-storage-url.com
# CLOUD_STORAGE_REGION=us-east-1
# CLOUD_STORAGE_BUCKET=your-bucket-name
# CLOUD_STORAGE_API_KEY=your-api-key
# CLOUD_STORAGE_API_SECRET=your-api-secret
